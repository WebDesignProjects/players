<h1>This is our Edit Page for player <%= @player.first_name %> information</h1>


<% if flash[:errors] %>
  <% flash[:errors].each do |e| %>
    <p><%= e %></p>
  <% end %>
<% end %>

<form action="/players/<%= @player.id %>" method="post">
  <!-- Additional code from index page -->
  <!-- above Post request gets over written by the_method and given a value to 
  patch or update the user -->
  <input type="hidden" name="_method" value="patch"> 
  
  <!-- Rails token for the session -->
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <p>
    <lable>First Name:</lable>
    <input type="text" name="player[first_name]" value="<%= @player.first_name %>">
  </p>
  <p>
    <lable>Last Name:</lable>
    <input type="text" name="player[last_name]" value="<%= @player.last_name %>" >
  </p>
  
  <input type="submit" value="Update"><br><br>
  
<a href=/players/>Go Back</a>